{% comment %}
    Component of cart modal, fetched using section rendering API
{% endcomment %}

{%- if cart != empty -%}
    <div class="cart-modal__links">
        <a href='/checkout' class="full-unstyled-link">
            <button id="checkout" class="button cart__checkout-button button--full-width button--primary" name="checkout">
                <span>{{ 'sections.cart.checkout' | t }}</span>
                <div class="loading-overlay__spinner hidden">
                    <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66"
                        xmlns="http://www.w3.org/2000/svg">
                        <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                    </svg>
                </div>
            </button>
        </a>
    </div>
{% endif %}