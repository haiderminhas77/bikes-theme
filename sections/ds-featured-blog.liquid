{%- liquid
	assign posts_displayed = section.settings.blog.articles_count
	if section.settings.post_limit <= section.settings.blog.articles_count
		assign posts_exceed_limit = true
		assign posts_displayed = section.settings.post_limit
	endif
    assign blocks_to_display = posts_displayed
    
    assign show_latest_articles = section.settings.show_latest_articles
    assign blog = section.settings.blog

    assign featured_articles = section.blocks
    if show_latest_articles and blog != blank
        assign featured_articles = blogs[blog].articles | slice: 0, section.settings.post_limit
    endif

    assign show_slider_on_mobile = false
	if section.settings.enable_mobile_slider and posts_exceed_limit
		assign show_slider_on_mobile = true
	endif

	assign show_slider_on_desktop = false
	if section.settings.enable_desktop_slider and posts_exceed_limit
		assign show_slider_on_desktop = true
	endif
-%}

<div class="blog collection collection--full-width color-background-1 gradient section-{{ section.id }}-padding{% if section.settings.page_width == 'normal' %} page-width-desktop-max-width-only{% endif %}">
    {%- if section.settings.blog != blank and section.settings.blog.articles_count > 0 -%}
        <slider-component class="slider-mobile-gutter">
            {% if section.settings.title != blank %}
                <div class="title-wrapper-with-link title-wrapper title-wrapper--self-padded-tablet-down">
                    <p class="title_caption{% if section.settings.title_caption_uppercase %} uppercase{% endif %}">{{ section.settings.title_caption | escape }}</p>
                    <div class="title-button__wrapper">
                        <h2 class="title{% if section.settings.title_uppercase %} uppercase{% endif %}">{% render 'icon-picker', icon: section.settings.icon_title %}{{ section.settings.title | escape }}</h2>
                        {%- if section.settings.read_all_button_label != blank -%}
                            <a href="{{ section.settings.blog.url }}" {% if section.settings.read_all_button_new_tab %}target="_blank"{% endif %} class="button button--primary read_all_button">
                                {{ section.settings.read_all_button_label | escape }}
                            </a>
                        {%- endif -%}
                    </div>
                </div>
            {% endif %}
            <ul id="Slider-{{ section.id }}"
                class="blog__posts articles-wrapper grid product-grid grid--1-col-tablet-down slider slider--desktop slider--tablet {% if section.settings.columns_desktop == 1 %} grid--1-col-desktop{% else %} grid--{{ section.settings.columns_desktop }}-col-desktop{% endif %} {% if posts_displayed > 1 %} slider--tablet{% endif %}{% if show_slider_on_mobile or show_slider_on_desktop %} slider{%endif%}{% if show_slider_on_desktop %} slider--desktop{% endif %}{% if show_slider_on_mobile %} slider--tablet {% unless section.settings.enable_grid_peek != true %} grid--peek{% endunless %}{% endif %}"
                role="list"
            >
                {% comment %} {%- for article in section.settings.blog.articles limit: section.settings.post_limit -%}
                    <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="blog__post grid__item article slider__slide slider__slide--full-width">
                        {% render 'article-card', blog: section.settings.blog, article: article, show_image: section.settings.show_image, show_date: section.settings.show_date, show_author: section.settings.show_author, show_excerpt: section.settings.show_excerpt %}
                    </li>
                {%- endfor -%} {% endcomment %}
                {% if featured_articles != blank %}
                    {% for item in featured_articles limit: section.settings.post_limit %}
                        <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="blog__post grid__item article slider__slide">
                            {%- liquid
                                if show_latest_articles and blog != blank
                                    assign article = item
                                else
                                    assign article = articles[item.settings.article]
                                endif
                                render 'article-card', blog: section.settings.blog, article: article, show_image: section.settings.show_image, show_date: section.settings.show_date, show_author: section.settings.show_author, show_excerpt: section.settings.show_excerpt, show_title: section.settings.show_title, icon: section.settings.icon_article
                            -%}
                        </li>
                    {%- endfor -%}
                {% endif %}
            </ul>
            {%- if blocks_to_display > 1 -%}
                <div class="{% if show_slider_on_mobile == false %} small-hide{% endif %}{% if show_slider_on_desktop == false %} medium-hide large-up-hide{% endif %}">
                    {% render 'progress-slider-bar', item_count: blocks_to_display, hide_bar: section.settings.hide_bar, slider_step_count: section.settings.slider_step_count %}
                </div>
            {%- endif -%}
        </slider-component>
    {%- else -%}
        <div class="blog-placeholder">
            <div class="placeholder media media--landscape">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="blog-placeholder__content">
                <h2>
                    {{ 'sections.featured_blog.onboarding_title' | t }}
                </h2>
                <p class="rte-width">
                    {{ 'sections.featured_blog.onboarding_content' | t }}
                </p>
            </div>
        </div>
    {%- endif -%}
</div>

