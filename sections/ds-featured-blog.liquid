    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }

    /* bottom borders */
    @media screen and (min-width: 750px) {
        #shopify-section-{{ section.id }} .title-wrapper {
            border-bottom: {{ section.settings.border_bottom }} solid 2px;
            margin-bottom: 2.6rem;
            position: relative;
            display: flex;
            flex-direction: column;
            padding-top: 2.6rem;
            padding-bottom: 2.6rem;
        }

        #shopify-section-{{ section.id }} .title-wrapper:after {
            content: '';
            width: 50%;
            position: absolute;
            bottom: -4px;
            display: block;
            left: 0;
            border-bottom: {{ section.settings.border_bottom }} solid 2px;
        }
    }

    {% if section.settings.title_center_desk %}
        @media screen and (min-width: 750px) {
            #shopify-section-{{ section.id }} .title-wrapper {
                align-items: center;
            }

            #shopify-section-{{ section.id }} .title-wrapper .title-button__wrapper {
                display: flex;
                flex-flow: column wrap;
                align-items: center;
                gap: 1.2rem;
            }
        }
    {% else %}
        #shopify-section-{{ section.id }} .title-wrapper .title-button__wrapper {
            display: flex;
            flex-flow: row wrap;
            gap: 2rem;
            margin-bottom: 1.2rem;
        }
    {% endif %}

    {% if section.settings.title_center_mob %}
        @media screen and (max-width: 749px) {
            #shopify-section-{{ section.id }} .title-wrapper {
                display: flex;
                flex-flow: column nowrap;
                align-items: center;
            }

            #shopify-section-{{ section.id }} .title-wrapper .title-button__wrapper {
                display: flex;
                flex-flow: column wrap;
                align-items: center;
                gap: 1.2rem;
            }
        }
    {% else %}
