                    </tr>
                    <tr>
                    <th class="row-header">{{ section.settings.first_block_third_row_title }}</th>
                        {%- for block in section.blocks -%}
                            <td {{ block.shopify_attributes }}>{{ block.settings.first_block_third_row | default: '—' }}</td>
