{{ 'component-comparison-table.css' | asset_url | stylesheet_tag }}

{%- assign products = section.blocks | map: 'settings' | map: 'product' -%}

{%- style -%}
    .comparison-table-{{ section.id }} .table-wrapper{
        padding-top: {{ section.settings.section_pt_mobile }}px;
        padding-bottom: {{ section.settings.section_pb_mobile }}px;
    }
    @media (min-width: 750px) {
        .comparison-table-{{ section.id }} .table-wrapper{
            padding-top: {{ section.settings.section_pt_desktop }}px;
            padding-bottom: {{ section.settings.section_pb_desktop }}px;
        }
    }
{%- endstyle -%}

<div class="comparison-table-container {{ section.settings.device_visibility }} comparison-table-{{ section.id }}">
    <div class="comparison-table-wrapper">
        <table class="comparison-table">
            <thead>
                <tr>
                <th class="row-header empty-head"></th>
                    {%- for product in products -%}
                        <td class="comparison-product-info">
                            {%- if product != blank -%}
                                {% render 'product-card',
                                    product_card_product: product,
                                    media_size: 'adapt',
                                    product_card_index: forloop.index0,
                                    feat_collection_index: section.id,
                                    crop_product_title: section.settings.crop_product_title,
                                    show_badges: section.settings.show_badges,
                                    lazy_load: true,
                                    quick_view_icon: true,
                                    show_quick_view: section.settings.show_quick_view
                                %}
                            {%- endif -%}
                        </td>
                    {%- endfor -%}
                </tr>
            </thead>
            <tbody>
                {%- if section.settings.first_block_visibility == true -%}
                    <tr class="row-wrapper">
                        <th class="row-header row-main-title">{{ section.settings.first_block_title }}</th>
                        <td colspan="{{ products.size }}"></td>
                    </tr>
                    <tr>
                    <th class="row-header">{{ section.settings.first_block_first_row_title }}</th>
                        {%- for block in section.blocks -%}
                            <td {{ block.shopify_attributes }}>{{ block.settings.first_block_first_row | default: '—' }}</td>
                        {%- endfor -%}
                    </tr>
                    <tr>
                    <th class="row-header">{{ section.settings.first_block_second_row_title }}</th>
                        {%- for block in section.blocks -%}
                            <td {{ block.shopify_attributes }}>{{ block.settings.first_block_second_row | default: '—' }}</td>
